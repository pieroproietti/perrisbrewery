#!/bin/sh
# postrm script for eggs-7.7.32
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge)
        # eggs configurazione
        rm -rf /etc/penguins-eggs.d/
        rm -rf /usr/local/share/penguins-eggs/
    ;;

    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        # pulizia dei link non rimovibili da apt
        rm -rf /usr/lib/penguins-eggs/distros
        rm -rf /usr/lib/penguins-eggs/krill

        # sanitize applications links
        rm -f /usr/share/applications/penguins-adapt.destop
        rm -f /usr/share/applications/penguins-clinstaller.destop
        rm -f /usr/share/applications/penguins-eggs.destop

        # sanitize xdg links
        rm -f /etc/xdg/autostart/add-penguins-desktop-icons.desktop
        rm -f /etc/xdg/autostart/add-penguins-links.desktop

        # sanitize others
        rm -f /usr/bin/pve-live.sh
        rm -f /etc/systemd/system/pve-live.service

        # remove yolk
        #rm -rf /usr/local/yolk
        rm -rf /var/local/yolk

        # remove penguins-eggs multiarch (krill-modules)
        rm -rf /usr/lib/i386-linux-gnu/penguins-eggs/
        rm -rf /usr/lib/x86_64-linux-gnu/penguins-eggs/
        # armel and arm64 have all in /usr/lib/penguins-eggs/
        # so don't need to be removed
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
