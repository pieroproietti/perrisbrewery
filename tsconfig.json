{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "lib": ["es2022"],
    "target": "es2022",    
    "typeRoots": ["./src/types"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}