{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2022"],
    "module": "Node16",
    "moduleResolution": "node16",
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "target": "es2022",    
    "typeRoots": ["node_modules/@types", "./src/types"],
  },
  "include": [
    "src/**/*"
  ]
}